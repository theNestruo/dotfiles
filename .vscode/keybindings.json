// Place your key bindings in this file to override the defaults
[
    // Replaces Ctrl+PageUp/Down with Ctrl(+Shift)+Tab
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.openNextRecentlyUsedEditorInGroup"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "-workbench.action.openPreviousRecentlyUsedEditorInGroup"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "when": "editorTextFocus",
        "command": "scrollPageUp"
    },
    {
        "key": "ctrl+pagedown",
        "when": "editorTextFocus",
        "command": "scrollPageDown"
    },

    // Replaces Ctrl+Shift+W and Ctrl+Shift+S
    {
        "key": "ctrl+shift+w",
        "command": "-workbench.action.closeWindow"
    },
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.closeAllEditors"
    },
    {
        "key": "ctrl+shift+s",
        "command": "-workbench.action.files.saveAs"
    },
    {
        "key": "ctrl+shift+s",
        "command": "saveAll"
    },

    // Replaces Ctrl+Shift+T with "Run Test Task"
    {
        "key": "ctrl+shift+t",
        "command": "-workbench.action.reopenClosedEditor"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.tasks.test"
    },

    // CapsLock for quick navigation
    {
        "key": "capslock capslock",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+capslock ctrl+capslock",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "alt+capslock alt+capslock",
        "when": "editorTextFocus",
        "command": "revealInExplorer"
    },

    // Ctrl+O for quick outline
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFile"
    },
    {
        "key": "ctrl+o",
        "when": "editorTextFocus",
        "command": "workbench.action.gotoSymbol"
    },
    {
        "key": "ctrl+o",
        "when": "inFileSymbolsPicker",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "ctrl+shift+o",
        "command": "-workbench.action.gotoSymbol"
    },

    // Ctrl+Shift+G for git-graph
	{
		"key": "ctrl+shift+g",
		"command": "-editor.action.announceCursorPosition" // ??
	},
    {
        "key": "ctrl+shift+g",
        "when": "view.workbench.scm.visible",
        "command": "git-graph.view"
    },

    // Ctrl+Shift+J to maximize panel
    {
        "key": "ctrl+shift+j",
        "when": "panelFocus",
        "command": "workbench.action.toggleMaximizedPanel"
    },

    // ScrlLock for quick navigation
    {
        "key": "scrolllock scrolllock",
        "when": "editorTextFocus",
        "command": "revealInExplorer"
    },

    // Centered layout and zen mode
    {
        "key": "ctrl+f11",
        "when": "!inZenMode",
        "command": "workbench.action.toggleCenteredLayout"
    },
    {
        "key": "shift+f11",
        "command": "workbench.action.toggleZenMode"
    },

    // [Java][Typescript]
    {
        "key": "ctrl+shift+o",
        "command": "editor.action.organizeImports",
        "when": "textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
    }
]
